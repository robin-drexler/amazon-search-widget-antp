{
    "background":{
        "scripts":["js/background.js"]
    },
    "version":"2014.15.2.1",
    "name":"Amazon Autocomplete Search Widget [ANTP]",
    "description":"Search Amazon.com directly in your Awesome New Tab Page. With Autocomplete!",
    "icons":{
        "128":"icon.png"
    },
    "manifest_version":2,
    "web_accessible_resources":["widget.html"],
    "content_security_policy":"script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "permissions":[
        "*://*.amazon.com/*",
        "tabs"
    ]
}
